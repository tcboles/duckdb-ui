{
  "name": "DuckDB",
  "productName": "DuckDB",
  "description": "DuckDB",
  "version": "v1.2.1-0",
  "type": "module",
  "main": "src/main.js",
  "build": {
    "appId": "com.tcboles.duckdb",
    "icon": "src/assets/icon.png",
    "mac": {
      "target": "dmg",
      "identity": "Thomas Boles",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "afterSign": "build/notarize.js",
    "win": {
      "target": "nsis",
      "icon": "src/assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    },
    "files": [
      "src/**",
      "build/**"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "tcboles",
        "repo": "duckdb-ui"
      }
    ]
  },
  "scripts": {
    "dev": "nodemon --watch . --ext js,jsx,ts,tsx --exec \"electron .\"",
    "start": "electron .",
    "build:mac:arm64": "electron-builder --mac --arm64 --publish always",
    "build:mac:x64": "electron-builder --mac --x64 --publish always",
    "build:win": "electron-builder --win --publish always",
    "build:linux": "electron-builder --linux --publish always",
    "lint": "eslint --fix ./src",
    "rebuild-duckdb": "electron-rebuild -f -w @duckdb/node-api"
  },
  "author": "Thomas Boles <tcboles@me.com> (https://github.com/tcboles)",
  "license": "MIT",
  "devDependencies": {
    "babel-plugin-root-import": "^6.6.0",
    "electron": "^35.1.1",
    "electron-builder": "^26.0.12",
    "electron-notarize": "^1.2.2",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unused-imports": "^4.1.3",
    "nodemon": "^3.1.9",
    "prettier": "^3.3.3"
  },
  "dependencies": {
    "@duckdb/node-api": "^1.2.1-alpha.16",
    "electron-updater": "^6.6.2"
  }
}
